{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch server.js with nodemon",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "nodemon",
      "program": "${workspaceFolder}/src/server/server.js",
      "env": {
        "PORT": "8080"
      },
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    }
  ]
}